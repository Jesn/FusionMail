# FusionMail 后端环境变量配置示例
# 复制此文件为 .env 并修改相应的值

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=fusionmail
DB_PASSWORD=fusionmail_password
DB_NAME=fusionmail
DB_SSLMODE=disable

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=3333

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=fusionmail_redis_password
REDIS_DB=0

# JWT 配置
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRY=24h

# 加密配置
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# 存储配置
STORAGE_TYPE=local
STORAGE_PATH=/data/attachments

# AWS S3 配置（可选）
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET=fusionmail-attachments

# 阿里云 OSS 配置（可选）
# OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
# OSS_ACCESS_KEY_ID=your-access-key
# OSS_ACCESS_KEY_SECRET=your-secret-key
# OSS_BUCKET=fusionmail-attachments

# 同步配置
SYNC_WORKER_COUNT=5
SYNC_DEFAULT_INTERVAL=5

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
